<!DOCTYPE html>
<html>

<head>
    <meta charset='utf-8'>
    <title>{{title}}</title>
    <link href="style.css" rel="stylesheet" type="text/css" />
</head>

<body id="searchBody">
    <div id="menuDiv">
        <a id='menuHome' href='/' class='menuBut'>Main Page</a>
        <a id='menuGal' href="/gallery" class="menuBut">Gallery</a>
        <a id='menuFav' href="/favorite" class="menuBut">Favorite</a>
        <a id="menuLog" class="menuBut" onclick="document.getElementById('backPage').style.display='block'">Login</a>
        <h4 id='usern'>Greetings {{username}}</h4>
    </div>

    <div id="searchdiv">
        <h1 id="head">Europeana Gallery</h1>
        <form id="form" action="/results" method="GET">
            <input id="searchText" type="text" name="query" placeholder="Search" />
            <input class="button" id="subBut" type="submit" value="Submit">
        </form>
    </div>
    
    <div id="backgrounds">
        <h2 id="backgroundMenu">Search Backgrounds</h2>
        <img id="Background1" class="BackgroundOptions" src="pa.jpg"/>
        <img id="Background1" class="BackgroundOptions" src="BackgroundOption1.jpg"/>
        <img id="Background1" class="BackgroundOptions" src="BackgroundOption2.jpg"/>
        <img id="Background1" class="BackgroundOptions" src="BackgroundOption3.jpg"/>
        <img id="Background1" class="BackgroundOptions" src="BackgroundOption4.jpg"/>
        <img id="Background1" class="BackgroundOptions" src="BackgroundOption5.jpg"/>
    </div>
    
    <div id="backPage">
        <form action="/" method="post">
            <div id="loginbox">
                <h3 class="header">Sign In</h3>
                <input class="loginInput" type="text" placeholder="Username" name="uname" required>
                <input class="loginInput" type="password" placeholder="Password" name="pswd" required>
                <button class="loginBut" type="submit">Login</button>
                <h4 id="lab" class="label">Need an account?</h4>
                <a id="noAccount" class="createAccLinks" onclick="document.getElementById('createAcc').style.display='block'; document.getElementById('loginbox').style.display='none'">Sign Up</a>
            </div>
        </form>
        <form action="/create_account" method="post">
            <div id="createAcc">
                <input class="loginInput" type="text" placeholder="Username" name="uname" required>
                <input class="loginInput" type="password" placeholder="Password" name="pswd" required>
                <input class="loginInput" type="password" placeholder="Confirm Password" name="pswd" required>
                <button class="loginBut" type="submit">Create Account</button>
                <h4 id="lab2" class="label">Already have an account?</h4>
                <a id="haveAcc" class="createAccLinks" onclick="document.getElementById('loginbox').style.display='block'; document.getElementById('createAcc').style.display='none'">Login</a>
            </div>
        </form>
    </div>
    </div>
</body>
<script>
var loginBox = document.getElementById('loginbox');
var createBox = document.getElementById('createAcc');
var page = document.getElementById('backPage');

window.onclick = function(event) {
    if (event.target == backPage) {
        backPage.style.display = "none";
    }
}
</script>

</html>